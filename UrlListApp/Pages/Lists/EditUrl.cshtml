@model UrlListApp.Models.UrlItem
@{
    ViewData["Title"] = "Edit URL";
}
<h1>Edit URL</h1>
<form asp-action="Edit" asp-route-id="@Model.Id" method="post">
    <div class="mb-3">
        <label asp-for="Url" class="form-label"></label>
        <input asp-for="Url" class="form-control" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title (optional)</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description (optional)</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="/lists/@Model.UrlListId/edit" class="btn btn-secondary">Back</a>
</form>
