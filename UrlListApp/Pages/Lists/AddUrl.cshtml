@model UrlListApp.Models.UrlItem
@{
    ViewData["Title"] = "Add URL";
    var listId = ViewBag.ListId;
}
<h1>Add URL</h1>
<form asp-action="Add" asp-route-listId="@listId" method="post">
    <div class="mb-3">
        <label asp-for="Url" class="form-label"></label>
        <input asp-for="Url" class="form-control" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title (optional)</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description (optional)</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
    <a href="/lists/@listId/edit" class="btn btn-secondary">Back</a>
</form>
